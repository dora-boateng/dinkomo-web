{
  "private": true,
  "name": "boateng-web",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "bootstrap-sass": "^3.3.7",
    "concat": "~1.0.0",
    "del": "^2.2.0",
    "del-cli": "^1.1.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "hashmark": "^5.0.0",
    "jquery": "~3.1.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "sass": "^1.0.0-beta.3",
    "sass-lint": "^1.12.1"
  },
  "config": {
    "appSrc": "resources/assets/js/app/*.js"
  },
  "scripts": {
    "_test:js": "echo JS test suite",
    "test:js": "echo TODO: run js tests",
    "lint:js": "eslint resources/assets/js/**/*.js",
    "_lint:css": "echo TODO: support other sass files through cli argument.",
    "lint:css": "sass-lint 'resources/assets/sass/app.scss, resources/assets/sass/**/*.scss' --verbose",
    "_clear": "echo TODO: support different directories through cli argument.",
    "clear:js": "del-cli public/assets/js/*.js",
    "clear:css": "del-cli public/assets/css/*.css",
    "prebuild:js": "echo npm run lint:js && npm run clear:js",
    "_build:js": "echo TODO: write shortcut for Hashmark + support different files through cli argument.",
    "build:js": "babel resources/assets/js/app | hashmark -l 10 'public/assets/js/app.{hash}.js' --asset-map resources/assets/build/js/manifest.app.json",
    "postbuild:js": "echo Sourcemaps?",
    "prebuild:css": "echo npm run lint:css && npm run clear:css",
    "build:css": "sass resources/assets/sass/app.scss | hashmark -l 10 'public/assets/css/app.{hash}.css' --asset-map resources/assets/build/css/manifest.app.json --silent",
    "postbuild:css": "echo Sourcemaps?",
    "build": "npm run build:css & npm run build:js"
  },
  "dependencies": {}
}
